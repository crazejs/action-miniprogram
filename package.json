{
  "name": "action-miniprogram",
  "description": "A GitHub Action to build MiniProgram.",
  "version": "0.0.0",
  "author": "Anguer",
  "private": true,
  "homepage": "https://github.com/crazejs/action-miniprogram",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/crazejs/action-miniprogram.git"
  },
  "bugs": {
    "url": "https://github.com/crazejs/action-miniprogram/issues"
  },
  "keywords": [
    "action",
    "miniprogram"
  ],
  "exports": {
    ".": "./dist/index.js"
  },
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "bundle": "npm run format:write && npm run lint && npm run build",
    "format:write": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint .",
    "build": "ncc build src/index.ts -o dist --source-map --license licenses.txt",
    "start": "npm run build -- --watch",
    "prepare": "husky || true",
    "release": "semantic-release"
  },
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1",
    "miniprogram-ci": "^1.9.15"
  },
  "devDependencies": {
    "@crazejs/lint": "^0.0.8",
    "@types/node": "^20",
    "@typescript-eslint/eslint-plugin": "^7",
    "@typescript-eslint/parser": "^7",
    "@vercel/ncc": "^0.38.1",
    "commitlint": "^19",
    "eslint": "^8",
    "eslint-plugin-github": "^4",
    "eslint-plugin-jsonc": "^2",
    "eslint-plugin-prettier": "^5",
    "husky": "^9",
    "lint-staged": "^15",
    "make-coverage-badge": "^1",
    "prettier": "^3",
    "prettier-eslint": "^16",
    "semantic-release": "^21",
    "typescript": "^5"
  }
}
